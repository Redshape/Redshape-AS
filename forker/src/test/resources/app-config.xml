<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Scans within the base package of the application for @Components to
         configure as beans -->
    <context:component-scan base-package="com.redshape"/>

    <import resource="xml-config-init.conf.xml" />

    <bean id="hasher" class="com.redshape.utils.hashers.MD5" scope="singleton"/>

	<bean id="packagesLoader" class="com.redshape.utils.PackagesLoader" scope="singleton">
		<property name="resourcesLoader">
			<ref bean="resourcesLoader"/>
		</property>
	</bean>

    <bean id="console" class="com.redshape.utils.system.console.Console"/>

    <bean id="systemFacade" class="com.redshape.utils.system.SystemFacade">
        <constructor-arg>
            <ref bean="console"/>
        </constructor-arg>
    </bean>

    <bean class="com.redshape.forker.protocol.queue.StandardProtocolQueueCreator" id="protocolQueueCreator"/>

    <bean id="forkManager" class="com.redshape.forker.impl.ForkManagerImpl">
        <constructor-arg>
            <ref bean="protocolQueueCreator"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="systemFacade"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="resourcesLoader"/>
        </constructor-arg>
    </bean>

</beans>

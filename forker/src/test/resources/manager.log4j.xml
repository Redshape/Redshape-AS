<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration>

    <appender name="file" class="org.apache.log4j.FileAppender">
        <param name="file" value="manager.log"/>
        <param name="append" value="true"/>
        <param name="bufferedIO" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>
        </layout>
    </appender>

    <logger name="com.redshape.persistence">
        <level value="error"/>
    </logger>

    <logger name="com.redshape.forker">
        <level value="debug"/>
    </logger>

    <logger name="com.redshape.projectshost">
        <level value="info"/>
    </logger>

    <logger name="com.redshape.projectshost.worker">
        <level value="info"/>
    </logger>

    <logger name="com.redshape.persistence.entities">
        <level value="error"/>
    </logger>

    <logger name="org.springframework">
        <level value="info"/>
    </logger>

    <logger name="com.redshape">
        <level value="info"/>
    </logger>

    <logger name="org.hibernate">
        <level value="error"/>
    </logger>

    <logger name="org.hibernate.hql">
        <level value="error"/>
    </logger>

    <logger name="org.hibernate.SQL">
        <level value="info"/>
    </logger>

    <logger name="org.hibernate.transaction">
        <level value="warn"/>
    </logger>

    <logger name="org.hibernate.type">
        <level value="warn"/>
    </logger>

    <root>
        <priority value="debug"/>
        <appender-ref ref="file"/>
    </root>
</log4j:configuration>
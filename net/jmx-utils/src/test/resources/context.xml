<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="resourcesLoader" class="com.redshape.utils.ResourcesLoader">
        <constructor-arg><value>src/test/resources</value></constructor-arg>
    </bean>

    <bean id="xmlHelper" class="com.redshape.utils.helpers.XMLHelper">
        <constructor-arg>
            <ref bean="resourcesLoader"/>
        </constructor-arg>
    </bean>

    <bean class="com.redshape.utils.config.XMLConfig">
        <constructor-arg>
            <ref bean="xmlHelper"/>
        </constructor-arg>
        <constructor-arg><value>config.xml</value></constructor-arg>
    </bean>

    <bean class="com.redshape.net.jmx.JMXFactory" id="jmxFactory">
        <property name="resourcesLoader">
            <ref bean="resourcesLoader"/>
        </property>
    </bean>

    <bean class="com.redshape.net.jmx.JMXUtil">
        <constructor-arg>
            <ref bean="jmxFactory"/>
        </constructor-arg>
    </bean>

</beans>
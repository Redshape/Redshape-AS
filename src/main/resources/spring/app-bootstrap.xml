<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<import resource="app-helpers.xml"/>
	
	<bean id="apiInitAction" class="com.redshape.applications.bootstrap.actions.ApiInit"/>
	<bean id="serversInitAction" class="com.redshape.applications.bootstrap.actions.ServersInit"/>
	<bean id="monitorsInitAction" class="com.redshape.applications.bootstrap.actions.MonitorsInit"/>
	<bean id="initTransportAction" class="com.redshape.applications.bootstrap.actions.InitTransport"/>
	<bean id="initPluginsAction" class="com.redshape.applications.bootstrap.actions.PluginsInit"/>
	<bean id="databaseInitAction" class="com.redshape.applications.bootstrap.actions.DatabaseInit"/>
	
	<bean id="bootstrap" class="com.redshape.applications.bootstrap.Bootstrap"
		p:config-ref="config"
		p:packagesLoader-ref="packagesLoader">
		<property name="actions">
			<list>
				<ref bean="databaseInitAction"/>
				<ref bean="apiInitAction"/>
				<ref bean="serversInitAction"/>
				<ref bean="monitorsInitAction"/>
				<ref bean="initPluginsAction"/>
				<ref bean="initTransportAction"/>
			</list>
		</property>
	</bean>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="resourcesLoader" class="com.redshape.utils.ResourcesLoader"
		scope="prototype">
		<constructor-arg><value>./</value></constructor-arg>
		<constructor-arg>
			<list>
				<value>./libs</value>
				<value>./resources</value>
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="packagesLoader" class="com.redshape.utils.PackagesLoader" scope="prototype">
		<constructor-arg><ref bean="resourcesLoader"/></constructor-arg>
	</bean>
	
	<bean id="xmlHelper" class="com.redshape.utils.helpers.XMLHelper" scope="prototype">
		<constructor-arg><ref bean="resourcesLoader"/></constructor-arg>
	</bean>
	
	<bean id="config" class="com.redshape.config.XMLConfig" scope="prototype">
		<constructor-arg><ref bean="xmlHelper"/></constructor-arg>
		<constructor-arg><value>configs/common/bootstrap.cfg.xml</value></constructor-arg>
	</bean>
</beans>
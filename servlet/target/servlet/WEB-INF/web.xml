<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

        <display-name>Make It Live!</display-name>

        <servlet>
            <servlet-name>main</servlet-name>
            <servlet-class>com.redshape.servlet.Servlet</servlet-class>
            <init-param>
                <param-name>config-path</param-name>
                <param-value>WEB-INF/config/common/bootstrap.cfg.xml</param-value>
            </init-param>
            <init-param>
                <param-name>resources-path</param-name>
                <param-value>WEB-INFO</param-value>
            </init-param>
        </servlet>

        <servlet-mapping>
            <servlet-name>main</servlet-name>
            <url-pattern>/</url-pattern>
        </servlet-mapping>

</web-app>